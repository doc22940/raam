    "clean": "rimraf {dist,.rts2*}",
    "lint:ts": "npx tsc --noEmit",
    "dev": "npm run build -- watch",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joe-bell/raam.git"
