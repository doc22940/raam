    "url": "https://github.com/joe-bell/raam/issues"
  },
  "homepage": "https://github.com/joe-bell/raam#readme",
  "peerDependencies": {
    "@emotion/core": ">= 10.0.0",
    "@emotion/styled": ">= 10.0.0",
    "@theme-ui/css": ">= 0.3.1",
    "react": ">= 16.8.0"
  },
  "dependencies": {
    "@styled-system/color": "5.1.2",
    "@styled-system/flexbox": "5.1.2",
