{
  "name": "raam",
  "version": "0.0.6",
  "description": "Beautifully boring cosmetic-free React.js components for structure and layout.",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "prebuild": "barrelsby --delete --directory src --exclude {box,flex,types,utils}.ts",
